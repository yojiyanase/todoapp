.task
  - if @task.eyecatch.attached?
    .task_image 
      = image_tag @task.eyecatch
  %h1.task_title= @task.title
  .task_detail
    = image_tag @task.user.avatar_image
    %div
      %p= @task.author_name
      %p= @task.display_created_at
  - if user_signed_in? && current_user.has_written?(@task)
    .task_detail_actions
      .dropdown
        = image_tag 'actions.svg', class: 'dropbtn'
        .dropdown-content.mini
          = link_to 'Edit', edit_task_path(@task)
          = link_to 'Delete', task_path(@task), data: {method: 'delete', confirm: '本当に削除してもいよろしいですか？'}
  .task_content
    = @task.content
