.container
  %h2.all_boards_tag
    = @board.title
  - @tasks.each do |task|
    = link_to board_task_path(task) do
      .card
        - if task.eyecatch.attached?
          .card_image
            = image_tag task.eyecatch
        .card_content
          .card_title
            = task.title
          - if user_signed_in? && current_user.has_written_task?(task)
            .board_detail_actions
              .dropdown
                .dropdown_menu
                  = image_tag 'actions.svg', class: 'dropbtn'
                  .dropdown-content.mini
                    = link_to 'Edit', edit_board_task_path(task)
                    = link_to 'Delete', board_task_path(task), data: {method: 'delete', confirm: '本当に削除してもいよろしいですか？'}
          .card_content_detail
            = task.content
          .card_detail
            = image_tag task.user.avatar_image
  = link_to new_board_task_path(board_id: @board.id) do
    .add_new_board
      .add_new_board_content
        .add_new_board_title
          %h2 + Add new card